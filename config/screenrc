# autodetach on disconnect/close
autodetach on         
# disable intro msg
startup_message off   
# default scrollback buffer
defscrollback 80000   
# enable visual bell
vbell off             

# replace C- escape sequence, default: escape ^Aa
escape ``             

# Window numbering starts at 1
bind c screen 1
bind 0 select 10

# disable flow control
defflow off           
# nethackish status messages, more clear.
nethack on            
# restore window contents after a vi session
altscreen on          

# about statu bar
backtick 1 5 5 true
hardstatus string "screen (%n: %t)"
caption string "%{= kw}%Y-%m-%d;%c %{= kw}%-Lw%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+Lw%1`"
caption always

bind 'K' kill
bind 'W' windowlist

shell "/usr/bin/zsh"
screen 1
